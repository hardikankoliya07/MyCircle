<div class="card">
    <div class="card-body p-4 text-center">
        <img style=" border-radius: 50%; width: 100px; height: 100px; "
            src="{{#if profile}}/images/uploads/{{profile}}{{else}}/images/default/user.png{{/if}}" alt="user">
        <h3 class="m-0 mb-1"><a href="#">{{first_name}} {{last_name}}</a></h3>
        <div class="text-muted">{{email}}</div>
        <div class="mt-3">
            <span class="badge bg-{{#compare gender '==' 'male'}}green{{else}}purple{{/compare}}-lt">{{gender}}</span>
            <span class="badge bg-{{#compare account_status '==' 'private'}}green{{else}}purple{{/compare}}-lt">
                {{account_status}}</span>
        </div>
    </div>
    <div class="d-flex">
        <p class="card-btn">
            Total Post : <span>{{createdPost}}</span>
        </p>
        <p class="card-btn">
            Saved Post : <span>{{savedPost}}</span>
        </p>
    </div>
    <div class="btn-follow" data-userid={{_id}}>
        <span class="card-btn" style="cursor: pointer;">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user-plus" width="24"
                height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path>
                <path d="M16 19h6"></path>
                <path d="M19 16v6"></path>
                <path d="M6 21v-2a4 4 0 0 1 4 -4h4"></path>
            </svg>
            <span id="status">{{#if follows}}{{#compare follows.status '==' 'requested'}}Requested{{else}}
                {{#compare follows.status '==' 'follow back'}}Follow back{{else}}Following{{/compare}}
                {{/compare}}{{else}}Follow{{/if}}</span>
        </span>
    </div>
</div>