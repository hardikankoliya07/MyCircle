<div class="modal fade" id="editPostModel" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">EDIT POST</h5>
            </div>
            <form class="container" id="editedPost" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group pt-2">
                        <label for="formGroupExampleInput">Enter Title</label>
                        <input type="text" class="form-control" name="title" id="editTitle" placeholder="Post title">
                    </div>
                    <div class="form-group pt-2">
                        <label for="exampleFormControlTextarea1">Enter Description</label>
                        <textarea class="form-control" id="editDesc" name="desc" placeholder="Post Description"
                            rows="4"></textarea>
                    </div>
                    <div class="form-group pt-2">
                        <label for="formGroupExampleInput">Choose post image</label>
                        <input type="file" class="form-control" name="editPostImg" id="editPostImg">
                    </div>
                    <div class="text-center pt-2">
                        <img class="rounded img-fluid" id="imgEditPost" style="width: 330px; height: 400px;"
                            src="/images/default/bg.jpg" alt="Post Image">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="close" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" id="updatePost" class="btn btn-primary">Update Post</button>
                </div>
            </form>
        </div>
    </div>
</div>