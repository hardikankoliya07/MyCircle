<div class="modal fade modal-lg" id="commentModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header d-flex flex-column">
                <div style="width: 100%;">
                    <h5 class="modal-title p-2" id="exampleModalToggleLabel">Comments</h5>
                </div>
                {{#if @root.authUser}}
                <div class="row w-100" style="align-items: center;">
                    <div class="mb-3 col-10">
                        <textarea class="form-control" id="commentArea" rows="3"
                            placeholder="write comment..."></textarea>
                    </div>
                    <div class="col-2">
                        <button id="btnComment" class="btn btn-primary">comment</button>
                    </div>
                </div>
                {{/if}}
            </div>
            <div class="modal-body" id="commentBody" style="max-height: calc(60vh - 200px); overflow-y: auto;">
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-bs-target="#commentModal" data-bs-toggle="modal"
                    data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>